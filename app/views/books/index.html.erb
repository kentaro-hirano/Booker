<body>

<h1 class="books-title">Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
    <thead>
    <tbody>
    <% @books.each do |book| %>
        <tr class="roop">
            <td class="roop1"><%= book.title %></td>
            <td class="roop2"><%= book.body %></td>
            <td><%= link_to "Show", book_path(book.id) %></td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<h2>New book</h2>
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <%= "error" %>
              <li><%= message %></li>
          <% end %>
          </ul>
<%= form_for(@book) do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>
</body>
