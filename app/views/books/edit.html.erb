<h1>Editing book</h1>
<ul>
<% @book.errors.full_messages.each do |message| %>
  <%= "error" %>
    <li><%= message %></li>
<% end %>
</ul>
<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>    
<% end %>

<%= link_to("Show",book_path) %>
<%= link_to("Back",books_path) %>

